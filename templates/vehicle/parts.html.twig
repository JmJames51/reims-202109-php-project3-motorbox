{% extends 'base.html.twig' %}

{% block title %}Part index{% endblock %}

{% block body %}

    <section class="flex container-column text-align-center">
        <div class="container-vehicle">
            <h1> {{ vehicle.name }} <br>
                {{ vehicle.brand }} <br>
                {{ vehicle.model }} <br>
            </h1>
            <div class= "container-fa-button">
                {{ include('vehicle/_delete_form.html.twig') }}
                <a href ="{{ path('vehicle_edit', {id: vehicle.id}) }}">
                    <img class="fa-edit" src="{{ asset('build/images/edit-solid.svg') }}"></img>
                </a>
            </div>
        </div>

        <div class="container-parts">
            <h2 class="sub-title">Temps d'utilisation total : {{ vehicle.usedHour }}H</h2>
            {% for part in vehicle.parts %}
            <div>
                <label for="{{ part.id }}">{{ part.name }}</label>
                <a class="button part-button" href="{{ path('vehicle_parts_edit', {vehicle: vehicle.id, part: part.id}) }}">Editer</a>
                <a class="button part-button" href="{{ path('vehicle_parts_delete', {vehicle: vehicle.id, part: part.id}) }}">Supprimer</a>
                <progress class="progress-part" value = "{{ vehicle.usedHour }}" max = "{{ part.lifespan }}"> </progress>
                <input class="part-input" type="checkbox" name="my-checkbox" id="{{ part.id }}">
            </div>
            {% endfor %}
                <a class="button" href="{{ path('vehicle_parts_new', {vehicle: vehicle.id}) }}">Ajouter pi√®ce</a>
        </div>
    </section>

{% endblock %}
